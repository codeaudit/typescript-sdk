{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@unroute/mcp-e2b": ["mcps/e2b/src"],
      "@unroute/mcp-exa": ["mcps/exa/src"]
    }
  },
  "include": ["src", "mcps/**/*.ts", "examples/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
